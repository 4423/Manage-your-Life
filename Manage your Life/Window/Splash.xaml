<Window x:Class="Manage_your_Life.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage your Life" Height="170" AllowsTransparency="True" Width="400" 
        WindowStyle="None" Background="Transparent" WindowStartupLocation="CenterScreen">


    <Border Name="border" BorderBrush="#FF555555" Background="#FF06A4FF" BorderThickness="0.5" Margin="10">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#FF7E7E7E" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="72*"/>
                <RowDefinition Height="13*"/>
            </Grid.RowDefinitions>
            <Label Content="Manage your Life" Foreground="#FFEEEEEE" FontSize="30"
                   HorizontalAlignment="Left" Height="67" Margin="10,10,0,0" VerticalAlignment="Top" Width="286"/>

            <Label Grid.Row="0" Name="label_working" Content="Connecting to database..." Foreground="#FFEEEEEE" FontSize="15"
                   HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,10,0"/>
        </Grid>
    </Border>
</Window>

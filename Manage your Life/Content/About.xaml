<UserControl x:Class="Manage_your_Life.Content.About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="ABOUT" Style="{StaticResource Heading2}" />
                <TextBlock  Margin="0,10">
                    <Run FontSize="14" FontWeight="Bold">Title:　Manage your Life</Run>
                </TextBlock>
                <TextBlock Text="このアプリケーションはあなたのパソコン生活をより良いものにする可能性を秘めています。" Margin="0,2" TextWrapping="Wrap" />                   
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

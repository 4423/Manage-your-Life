<UserControl x:Class="Manage_your_Life.Pages.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignWidth="900">
    
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <ListBox Name="listBox1" HorizontalAlignment="Left" Width="600" Height="200"/>
                
                <StatusBar HorizontalAlignment="Left" Height="26" VerticalAlignment="Bottom" Width="942" >
                    <StatusBarItem>
                        <Label Name="statusBarItem_label" Height="24" HorizontalAlignment="Left" Width="935" VerticalAlignment="Top"/>
                    </StatusBarItem>
                </StatusBar>
            </StackPanel>
            
        </ScrollViewer>
    </Grid>
</UserControl>
